{
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "includeFiles": "client/**" }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "installCommand": "npm install --prefix client && npm install --prefix api"
}
